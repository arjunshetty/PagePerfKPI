{
  "manifest_version": 2,
  "name": "PagePerfKPI",
  "description": "Breakdown timings of page component using windows timing api",
  "version": "1.0",
  "homepage_url": "https://github.com/arjunshetty/PagePerfKPI",
  "author" : "Arjun Shetty",
  "icons": { 
    "16": "images/icon.png",
    "19": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon.png",
      "19": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },
  "permissions": [
    "<all_urls>"
  ],
  "offline_enabled": false
}